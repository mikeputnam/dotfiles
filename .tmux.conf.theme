# General
#set -g prefix `
set -g prefix C-space
set -g set-titles on
setw -g clock-mode-colour yellow
setw -g utf8 on
set -g set-remain-on-exit on
setw -g mode-keys vi
set -g display-panes-time 5000

# Notices
set bell-action any

# Status
set -g status-left-length 30
set -g status-left "[ #T ]"
set -g status-right-length 30
#set -g status-right "[ %a %m/%d %H:%M/#(date --utc +%%H:%%M) ]"
set -g status-right "%a %b %e %I:%M %Z %Y"

# Keybinds
bind e split-window
bind h list-keys
bind m lock-server
bind k kill-window
bind r respawn-window

# Colors
set -g status-bg black
set -g status-fg green
set -g message-bg green

